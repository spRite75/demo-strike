generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model LocalUser {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model DemoFile {
  id          Int      @id @default(autoincrement())
  filepath    String   @unique
  fileCreated DateTime
  fileUpdated DateTime
  parsed      Boolean  @default(false)
  deleted     Boolean  @default(false)
  Match       Match?
}

model Player {
  id                    Int           @id @default(autoincrement())
  steam64Id             String        @unique
  displayName           String
  steamProfileUrl       String?
  steamAvatarUrlDefault String?
  steamAvatarUrlMedium  String?
  steamAvatarUrlFull    String?
  matchPlayers          MatchPlayer[]
}

model Match {
  id         String        @id
  demoFile   DemoFile      @relation(fields: [demoFileId], references: [id])
  demoFileId Int           @unique
  mapName    String
  serverName String
  clientName String
  players    MatchPlayer[]
}

model MatchPlayer {
  Match              Match  @relation(fields: [matchId], references: [id])
  matchId            String
  steam64Id          String
  displayName        String @default("player")
  kills              Int
  assists            Int
  deaths             Int
  headshotPercentage String
  Player             Player @relation(fields: [playerId], references: [id])
  playerId           Int

  @@id([matchId, steam64Id])
}
